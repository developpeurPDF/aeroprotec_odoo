<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- add Subcontracting Details in workcenter form -->
        <record id="mrp_workcenter_view_inherit" model="ir.ui.view">
                <field name="name">mrp.workcenter.form</field>
                <field name="model">mrp.workcenter</field>
                <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
                <field name="arch" type="xml">
                    <xpath expr="//page" position="after">
                        <page string="Subcontracting" autofocus="autofocus" name="mrp_subcontracting" groups="purchase_mrp_subcontract_app.group_subcontracting">
                            <group string="Apply Subcontracting">
                                <field name="is_subcontract"/>
                            </group>
                        <group string="Subcontracting Details" attrs="{'invisible':[('is_subcontract','!=',True)]}">
                            <group>
                                 <field name="partner_id" attrs="{'required':[('is_subcontract','=',True)]}"/>
                                 <field name="product_id" attrs="{'required':[('is_subcontract','=',True)]}"/>
                                 <field name="cost" class="oe_inline" attrs="{'required':[('is_subcontract','=',True)]}"/>

                            </group>
                            <group>
                                 <field name="picking_type_id" attrs="{'required':[('is_subcontract','=',True)]}"/>
                                 <field name="return_type_id" attrs="{'required':[('is_subcontract','=',True)]}"/>
                            </group>
                        </group>
                       </page>                    
                    </xpath>
                </field>
        </record>

    </data>
</odoo>