<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_aero_view_form" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='detailed_type']" position="before">

                    <field name="code"/>
                    <field name="plan_reference"/>
                    <field name="coeff_avion"/>
                    <field name="masque_impression"/>

                </xpath>
                <notebook>
                    <page string="MÃ©thode">
                        <group>
                        <group string="Description">
                        <field name="forme"/>
                        <field name="hauteur"/>
                        <field name="largeur"/>
                        <field name="longueur"/>
                        <field name="diametre"/>
                        <field name="surface"/>
                        <field name="surface_traiter"/>
                        <field name="type_montage"/>
                        <field name="famille_matiere"/>
                        <field name="famille_matiere_name" invisible="1"/>
                        <field name="matiere"/>
                        <field name="matiere_name" invisible="1"/>
                        <field name="ref_matiere"/>
                        <field name="ref_matiere_name" invisible="1"/>
                        <field name="resistance_matiere"/>
                        </group>
<!--                        </group>-->
<!--                        <group>-->
                        <group string="Info">
                            <field name="activite"/>
                            <field name="motif_blocage_lancement"/>
                            <field name="classe_fonctionnelle"/>
                            <field name="programme_aeonautique"/>
                        </group>
                        </group>
                    </page>
                </notebook>

            </field>
    </record>
    </data>
</odoo>