<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="mrp_quality_check_inherit" model="ir.ui.view">
            <field name="name">quality.checks.product</field>
            <field name="model">quality.checks</field>
            <field name="inherit_id" ref="warehouse_quality_control_app.view_qualitycheck_form"/>
            <field name="arch" type="xml">

                <xpath expr="//form/header" position="inside">

                     <button
                            name="action_create_non_conformite"
                            type="object"
                            string="Créer Non-Conformité"
                            class="btn-primary"
                            attrs="{'invisible': [('non_conformite_id', '!=', False)]}"/>
                           
<!--                        <field name="non_conformite_id"/>-->
                </xpath>
                <xpath expr="//field[@name='team_id']" position="after">

                        <field name="non_conformite_id" readonly="1"/>
                        <field name="moyen_controle"/>

                </xpath>
            </field>
        </record>
        <record id="mrp_quality_check_inherit_tree" model="ir.ui.view">
            <field name="name">quality.checks.product.tree</field>
            <field name="model">quality.checks</field>
            <field name="inherit_id" ref="warehouse_quality_control_app.view_qualitycheck_tree"/>
            <field name="arch" type="xml">

                
                <xpath expr="//field[@name='quality_point_id']" position="after">

                        
                        <field name="mrp_id" string="N° OF"/>

                </xpath>
                <xpath expr="//field[@name='product_id']" position="after">

                        
                        <field name="nom_controle"/>
                        <field name="quantite_fabrique"/>
                           <field name="quantite_controle"/>
		 

                </xpath>
            </field>
        </record>
        <record id="mrp_productionn_non_conformite_view_form" model="ir.ui.view">
            <field name="name">mrp.production.non.conformite.form.inherit</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                    <page string="Non conformités" invisible="1">
                        <field name="nc_ids" invisible="1"/>
                    </page>
                        

                </xpath>

            </field>
        </record>
        

       
    </data>
</odoo>


