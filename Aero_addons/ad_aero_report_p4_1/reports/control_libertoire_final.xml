<odoo>
    <template id="control_libertoire_final_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <xpath expr="//div[@class='header']" position="replace">
                        <div></div>
                    </xpath>
                    <div class="page">
                        <style>
                            .page {
                            font-family: Arial, sans-serif;
                            font-size: 12pt;
                            color: #000 !important;
                            text-align: justify;
                            }

                            h2 {
                            font-size: 12pt;
                            text-align: center;
                            color: #000 !important;
                            }

                            .content-table, .signature-table, .border-table {
                            width: 100%;
                            border-collapse: collapse;
                            margin-top: 10px;
                            border: 1px solid #000 !important;
                            }

                            .content-table td, .signature-table td, .border-table td {
                            border: 1px solid #000;
                            padding: 5px;
                            font-size: 12pt;
                            }

                            .highlight-yellow {
                            background-color: yellow;
                            }
                            .highlight-blue {
                            background-color: #00bfff;
                            }

                            .header-table, .content-table {
                            width: 100%;
                            border: 1px solid #000;
                            border-collapse: collapse;
                            margin-top: 20px;
                            }

                            .header-table td, .content-table td {
                            border: 1px solid #000;
                            padding: 5px;
                            font-size: 12pt;
                            }

                            .header-table .logo-cell {
                            width: 30%;
                            text-align: center;
                            }

                            .header-table .title-cell {
                            width: 40%;
                            font-size: 16pt;
                            font-weight: bold;
                            text-align: center;
                            align-items: center;
                            }

                            .header-table .report-number {
                            width: 30%;
                            text-align: center;
                            font-weight: bold;
                            align-items: center;
                            }
                        </style>

                        <!-- Main Content -->
                        <main style="margin-top: 300px !important;">

                            <table class="header-table" style="height: 100px !important;">
                                <tr>
                                    <td class="logo-cell">
                                        <img src="ad_aero_report_p4_1/static/src/img/aeroprotec_logo.jpg"
                                             style="height: 70px !important; width: 80% !important; align-items: center; margin-top: 5px !important;"/>
                                    </td>
                                    <td class="title-cell" style="margin-top: 80px !important; color: #000 !important;">
                                        RAPPORT DE CONTROLE LIBERATOIRE FINAL
                                    </td>
                                    <td class="report-number"
                                        style="margin-top: 80px !important; color: #000 !important;">CFL<span t-field="o.id"/>
                                    </td>
                                </tr>
                            </table>


                            <table class="content-table" style="height: 150px; margin-top: -3.2px !important;">
                                <tr>
                                    <td style="width: 50%;">
                                        <p style="margin-top: 7px; color: #000 !important;">
                                            <strong>CLIENT :</strong>
                                           <span t-field="o.sale_order_line_id.order_partner_id"/>
                                        </p>
                                        <br/>
                                        <p style="color: #000 !important;">
                                            <strong>N° Commande interne : </strong>
                                            <span t-field="o.sale_order_line_id.order_id.name"/>
                                        </p>
                                    </td>
                                    <td style="width: 50%;">
                                        <p style="margin-top: 7px; color: #000 !important;">
                                            <strong>N° Commande Client :</strong>
                                            <span t-field="o.sale_order_line_id.order_id.client_order_ref"/>
                                        </p>
                                        <br/>
                                        <p style="color: #000 !important;">
                                            <strong>N° d'OF :</strong>
                                            <span t-field="o.name"/>
                                        </p>
                                    </td>
                                </tr>


                                <tr>
                                    <td style="border: none;">
                                        <p style="margin-top: 7px; color: #000 !important;">
                                            <strong>REFERENCE pièces :</strong>
                                            <span t-field="o.product_id.default_code"/>
                                        </p>
                                        <br/>
                                        <p style="color: #000 !important;">
                                            <strong>DESIGNATION pièces :</strong>
                                            <span t-field="o.product_id.name"/>
                                        </p>
                                    </td>
                                    <td style="border: none;"></td>
                                </tr>

                            </table>


                            
                            <table style="width: 100% !important; margin-top: 30px;">

                                <t t-foreach="enumerate(o.workorder_ids)" t-as="operation_info">
                                <t t-set="index" t-value="operation_info[0]"/>
                                
                                <t t-set="operation" t-value="operation_info[1]"/>
                        <tr>
                        <td style="width: 3% !important;"><t t-esc="index + 1"/></td>
                        <td style="width: 10% !important;"><p style="padding: 5px;"><span t-field="operation.name"/></p></td>
                        <td style="width: 87% !important;">
                        <t t-if="operation.check_ids">
                        <table style="width: 100%; margin-top: 20px;">
                        <thead>
                       
                        <th><p style="font-size: 8pt; color: #000;">Séq.Nom <br/> du contrôle</p></th>
                        <th><p style="font-size: 8pt; color: #000;">Qté concernée<br/>en %</p></th>
                        <th><p style="font-size: 8pt; color: #000;">Qté pce</p></th>
                        <th><p style="font-size: 8pt; color: #000;">Moyen de<br/>contrôle</p></th>
                        <th><p style="font-size: 8pt; color: #000;">Qté C</p></th>
                        <th><p style="font-size: 8pt; color: #000;">Qté NC</p></th>
                        
                        <th><p style="font-size: 8pt; color: #000;">Date fin Op</p></th>  
                        <th style="width: 10%;"><p style="font-size: 8pt; color: #000;">Visa</p></th>
                        </thead>
                        <tbody>
                       
                        <td>
                        <t t-foreach="operation.check_ids" t-as="check">

                                                    <p style="color: #000 !important; padding-left: 3px; font-size: 10pt;">
                                                        <span t-field="check.name"/> - <br/><span t-field="check.nom_controle"/>
                                                    </p>

                                                </t>
                        </td>
                        <td>
                        <t t-foreach="operation.check_ids" t-as="check">

                                                    <p style="color: #000 !important; padding-left: 3px;">
                                                        <span t-field="check.qte_concernee"/>
                                                    </p>

                                                </t>
                        </td>
                        <td><t t-foreach="operation.check_ids" t-as="check">

                                                    <p style="color: #000 !important; padding-left: 3px;">
                                                        <span t-field="check.quantite_fabrique"/>
                                                    </p>

                                                </t></td>
                                                 <td><t t-foreach="operation.check_ids" t-as="check">

                                                    <p style="color: #000 !important; padding-left: 3px;">
                                                        <span t-field="check.moyen_controle"/>
                                                    </p>

                                                </t></td>
                                                <td><t t-foreach="operation.check_ids" t-as="check">

                                                    <p style="color: #000 !important; padding-left: 3px;">
                                                        <span t-field="check.quantite_conforme"/>
                                                    </p>

                                                </t></td>
                                                <td><t t-foreach="operation.check_ids" t-as="check">

                                                    <p style="color: #000 !important; padding-left: 3px;">
                                                        <span t-field="check.quantite_non_conforme"/>
                                                    </p>

                                                </t></td>
                                         

                                                <td><t t-foreach="operation.check_ids" t-as="check">

                                                    <p style="color: #000 !important; padding-left: 3px;">
                                                        <span t-field="check.date_fabrication"/>
                                                    </p>

                                                </t></td>
                                                <td></td>
                        </tbody>
                        </table>
                        </t>
                        </td>
                        </tr>
                        </t>
                            </table>

                            <!-- Signature Section -->
                            <table class="signature-table" style="height: 100px !important; margin-top: 50px;">
                                <tr>
                                    <td>
                                        <p style="margin-top: 7px; color: #000; text-align: center;">
                                            <strong>NOM</strong>
                                            <br/>
                                            <!--<span t-esc="user.name"/>-->
                                            <t t-foreach="operation.production_id.equipe_controle.employee_ids" t-as="equipe">

                                                    <p style="color: #000 !important; padding-left: 3px;">
                                                        <span t-field="equipe.name"/>
                                                    </p>

                                                </t>
                                        </p>
                                    </td>
                                    <td>
                                        <p style="margin-top: 7px; color: #000; text-align: center;">
                                            <strong>DATE</strong>
                                            <br/>
                                            <span t-esc="datetime.datetime.now().strftime('%d-%m-%Y')"/>
                                        </p>
                                    </td>
                                    <td>
                                        <p style="margin-top: 7px; color: #000; text-align: center;">
                                            <strong>VISA</strong>
                                            <br/>
                                            <t t-foreach="operation.production_id.equipe_controle.employee_ids" t-as="equipe">

                                                   
                                                    <img t-if="equipe.signature"
                                 t-att-src="image_data_uri(equipe.signature)" style="width: 50px;height: 50px"/>
                                                </t>
                                        </p>
                                    </td>

                                </tr>

                            </table>


                        </main>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
