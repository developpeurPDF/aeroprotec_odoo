<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Quotation/sale order Report Wizard Form View -->
    <record id="sale_report_wizard_form_view" model="ir.ui.view">
        <field name="name">sale.order.report.wiz.form</field>
        <field name="model">sale.order.report.wiz</field>
        <field name="arch" type="xml">
            <form string="Quotation/Sale Excel Report">
                <footer>
                    <button name="print_sale_order_report" string="Print Excel Report" type="object" class="oe_highlight"/>
                    <button string="Cancel" name="cancel" special="cancel" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Quotation/sale order Report Wizard Action View -->
    <record id="action_sale_report_action" model="ir.actions.act_window">
        <field name="name">Quotation/Sale Order Report</field>
        <field name="res_model">sale.order.report.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="sale_order_action" model="ir.actions.act_window">
        <field name="name">Quotation/sale excel report</field>
        <field name="res_model">sale.order.report.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
      <!--   <field name="binding_type">form</field> -->
    </record>

</odoo>