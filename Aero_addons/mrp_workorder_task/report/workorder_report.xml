    <record id="workorder_report_id" model="ir.actions.report">
        <field name="name">Imprimer le bon de travail</field>
        <field name="model">mrp.workorder</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">mrp_workorder_task.workorder_report</field>
        <field name="report_file">mrp_workorder_task.workorder_report</field>
        <field name="binding_model_id" ref="mrp.model_mrp_workorder"/>
        <field name="binding_type">report</field>
    </record>

        <template id="workorder_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="row mt15 mb15 table">
                                <div class="col-10">
                                    <h3 class="text-center"><span t-field="o.name"/> - <span t-field="o.state"/></h3>
                                </div>
                             </div>
                            <div class="row mt15 mb15">
                                <div class="col-5">
                                    <strong>À produire :</strong>  <span t-field="o.product_id"/>
                                </div>
                                <div class="col-7">
                                <strong>Projet: </strong><span t-field="o.project_id"/>
                                </div>
                            </div>
                             <div class="row mt15 mb15">
                                <div class="col-5 ">
                                    <strong>Quantité produite :</strong>  <span t-field="o.qty_produced"/>/<span t-field="o.qty_production"/>
                                                <span t-field="o.product_uom_id"/>
                                </div>
                                <div class="col-7">
                                    <strong>Compte analytique :</strong>  <span t-field="o.analytic_account_id"/>
                                </div>
                            </div>
                            <div class="row mt15 mb15">
                                <div class="col-5">
                                </div>
                                <div class="col-7">
                                    <strong>Tâche:</strong>  <span t-field="o.task_id"/><br/>
                                    <strong>Priorité Globale :</strong>  <span t-field="o.priorite_globale"/><br/>
                                    <strong>Type de ligne :</strong>  <span t-field="o.aog"/><br/>
                                    <strong>Référence gamme :</strong>  <span t-field="o.gamme_of.code"/><br/>
                                    <strong>Code Opération :</strong>  <span t-field="o.code_operation"/><br/>
                                    <strong>Norme interne :</strong>  <span t-field="o.norme_interne"/> <strong>Indice :</strong>  <span t-field="o.indice_ni"/><br/>
                                    <strong>Norme externe :</strong>  <span t-field="o.norme_externe"/> <strong>Indice :</strong>  <span t-field="o.indice_ne"/><br/>
                                    <strong>Donneur d'ordre :</strong>  <span t-field="o.production_id.donneur_order"/><br/>
                                </div>
                          </div>
                            <div t-if="o.name">
                                <strong><h3>Production actuelle</h3></strong>
                                  <div class="row mt15 mb15 table">
                                        <div class="col-12">
                                            <strong>Quantité actuelle :</strong>  <span t-field="o.qty_producing"/>   <span t-field="o.product_uom_id"/>
                                        </div>
                                  </div>
                            </div>
                            <div class="row mt15 mb15 table">
                                <div class="col-5">
                                    <strong><h3>Suivi du temps</h3></strong>
                                </div>
                            </div>   
                            <div class="row mt15 mb15 table">
                                <div class="col-5">
                                    <strong>Date prévue :</strong>   <span t-field="o.date_planned_start"/>
                                </div>
                                <div class="col-7">
                                <strong>Durée prévue :</strong>   <span t-field="o.duration_expected"/>   minutes
                                </div>
                            </div>
                             <div class="row mt15 mb15 table">
                                <div class="col-5">
                                    <strong>Date d'entrée en vigueur :</strong>   <span t-field="o.date_start"/>
                                </div>
                                <div class="col-7">
                                    <strong>Durée réelle :</strong>   <span t-field="o.duration"/>
                                </div>
                            </div>
                             <div class="row mt1 mb32 table">
                                <div class="col-5">
                                </div>
                                <div class="col-7">
                                </div>
                            </div>
                            <div t-if="o.name">
                                <table class="table table-condensed">
                                    <tr>
                                        <td class="text-left"><strong>Date de début</strong></td>
                                        <td class="text-left"><strong>Date de fin</strong></td>
                                        <td class="text-left"><strong>Durée</strong></td>
                                        <td class="text-left"><strong>Utilisateur</strong></td>
                                        <td class="text-left"><strong>Efficacité</strong></td>
                                    </tr>
                                    <tr t-foreach="o.time_ids" t-as="line">
                                        <td class="text-left"><span t-field="line.date_start"/></td>
                                        <td class="text-left"><span t-field="line.date_end"/></td>
                                        <td class="text-left"><span t-field="line.duration"/></td>
                                        <td class="text-left"><span t-field="line.user_id"/></td>
                                        <td class="text-left"><span t-field="line.loss_id"/></td>
                                    </tr>
                                </table>
                            </div>
                            <div>
                                <strong><h3>Divers</h3></strong>
                                <table class="table table-condensed">
                                    <tr>
                                        <td class="text-left"><strong>Centre de travail</strong></td>
                                        <td class="text-left"><strong>Ordre de fabrication</strong></td>
                                    </tr>
                                    <tr>
                                        <td class="text-left"><span t-field="o.workcenter_id"/></td>
                                        <td class="text-left"><span t-field="o.production_id"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
</odoo>
