<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cont_env_cee_view_search" model="ir.ui.view">
        <field name="name">contribution.environnementalesearch</field>
        <field name="model">contribution.environnementale</field>
        <field name="arch" type="xml">
            <search string="CEE">
                <field name="name"/>
                <field name="customer_id"/>
                <newline/>
                <group expand="0" string="Group By...">
                    <filter string="Date" name="name_invoice_date" domain="[]" context="{'group_by':'invoice_date'}"/>
                    <filter string="Customer" name="customer_id_groupby" domain="[]" context="{'group_by':'customer_id'}"/>
                    <filter string="Company" name="company_id_groupby" domain="[]" context="{'group_by':'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="cont_env_cee_view_tree" model="ir.ui.view">
        <field name="model">contribution.environnementale</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false" default_order="id desc">
                <field name="name"/>
                <field name="invoice_number"/>
                <field name="invoice_date"/>
                <field name="due_date"/>
                <field name="customer_id"/>
                <field name="active" invisible="1"/>
                <field name="amount"/>
                <field name="company_id" groups="base.group_multi_company" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="cont_env_cee_view_form" model="ir.ui.view">
        <field name="model">contribution.environnementale</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
                    <button name="action_confirm" string="Confirmer" class="oe_highlight"
                            type="object"
                            attrs="{'invisible': ['|', ('active', '=', False), ('state', '!=', 'draft')]}"/>
                    <button name="reset_draft" string="Réinitialiser to brouillon" class="oe_highlight"
                            type="object"
                            attrs="{'invisible': ['|', ('active', '=', False), '&amp;', ('state', '!=', 'cancel'), ('state', '!=', 'confirmed')]}"/>
                    <button name="create_invoice" string="Créer une facture" class="oe_highlight"
                            type="object"
                            attrs="{'invisible': ['|', ('active', '=', False), '&amp;', ('state', '!=', 'cancel'), '|', ('state', '!=', 'confirmed'), ('state', '=', 'invoiced')]}"/>
                    <button name="action_cancel" string="Annuler"
                            type="object"
                            attrs="{'invisible': ['|', ('active', '=', False), '&amp;', ('state', '!=', 'draft'), ('state', '!=', 'confirmed')]}"/>
                </header>
                <sheet>
                    <!--                        <div class="oe_button_box" name="button_box">-->
                    <!--                            <button name="create_action" string="Add in the 'Print' menu" type="object"-->
                    <!--                                    attrs="{'invisible':[('binding_model_id','!=',False)]}" icon="fa-plus-square"-->
                    <!--                                    help="Display an option on related documents to print this report" class="oe_stat_button"/>-->
                    <!--                        </div>-->
                    <div class="oe_title">
                        <h1>
                            <field name="name" attrs="{'invisible':[('name', '=', '/')],
                            'readonly': [('state', '!=', 'draft')]}" placeholder="Draft"/>

                            <span attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('name', '!=', '/')]}">
                                Draft
                            </span>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="invoice_number"/>
                            <field name="customer_id"/>
                            <field name="move_id"/>
                            <field name="active" invisible="1"/>
                            <field name="origin_move_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="due_date"/>
                            <field name="invoice_date"/>
                            <field name="account_id"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="cont_env_cee_action" model="ir.actions.act_window">
        <field name="name">Contribution environnementale</field>
        <field name="res_model">contribution.environnementale</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_server_cont_env_cee_invoice" model="ir.actions.server">
        <field name="name">Créer Facture de débours</field>
        <field name="model_id" ref="model_contribution_environnementale"/>
        <field name="binding_model_id" ref="model_contribution_environnementale"/>
        <field name="state">code</field>
        <field name="code">
            action = records.create_invoice()
        </field>
    </record>

</odoo>