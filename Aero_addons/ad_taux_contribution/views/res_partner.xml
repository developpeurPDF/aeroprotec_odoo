<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit.hr</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="industry_id" position="after">
                <field name="return_prime" invisible="1"/>
<!--                <field name="ad_montant_rg" invisible="0"/>-->
                <field name="contribution_enrg" invisible="0"/>
<!--                <field name="ad_montant_cee" invisible="0"/>-->
                <field name="contribution_env" invisible="0"/>


            </field>
            <xpath expr="//group[@name='misc']//field[@name='company_id']" position="replace">
                <field name="company_id" groups="base.group_user" options="{'no_create': True}" attrs="{'readonly': [('parent_id', '!=', False)]}" force_save="1"/>
            </xpath>
        </field>
    </record>
</odoo>