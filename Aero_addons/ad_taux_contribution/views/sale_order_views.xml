<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <group name="sale_info" position='inside'>
                <field name="energie_return"/>
                <field name="rg_percentage" attrs="{'invisible':[('energie_return','=',False)]}" class="oe_inline"/>
                <field name="cont_env"/>
                <field name="cont_env_amount" attrs="{'invisible':[('cont_env','=',False)]}"/>
            </group>
            <xpath expr="//field[@name='tax_totals']" position="after">
                <field name="energie_percentage_amount" invisible="1"/>
                <!--                <field name="energie_percentage_amount" attrs="{'invisible':[('energie_return','=',False)]}"/>-->
                <!--                <field name="cont_env_total_amount" attrs="{'invisible':[('cont_env','=',False)]}"/>-->
            </xpath>
        </field>
    </record>


</odoo>