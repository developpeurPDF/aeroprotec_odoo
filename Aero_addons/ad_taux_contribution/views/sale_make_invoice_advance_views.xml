<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_advance_payment_inv_inherit" model="ir.ui.view">
        <field name="name">sale.advance.payment.inv.inherit</field>
        <field name="model">sale.advance.payment.inv</field>
        <field name="inherit_id" ref="sale.view_sale_advance_payment_inv"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='advance_payment_method']" position="after">

                <div id="retenue_details">
                    <label for="energie_percentage_amount"
                       string="Contribution énergétique"
                       attrs="{'invisible': [('advance_payment_method', '!=', 'contribution_energie')]}"/>

                    <field name="energie_percentage_amount"
                           attrs="{'invisible': [('advance_payment_method', '!=', 'contribution_energie')]}"
                           class="oe_inline"/>
                    <span attrs="{'invisible': [('advance_payment_method', '!=', 'contribution_energie')]}"
                          class="oe_inline">%
                    </span>
                    <br></br>
<!--                    <label for="due_date"-->
<!--                       string="Date d'échance"-->
<!--                       attrs="{'invisible': [('advance_payment_method', '!=', 'contribution_energie')]}"/>-->
<!--                     <field name="due_date"-->
<!--                       attrs="{'invisible': [('advance_payment_method', '!=', 'contribution_energie')]}"/>-->
                </div>

            </xpath>

            <xpath expr="//field[@name='advance_payment_method']" position="after">

                <div id="cee_details">
                    <field name="cont_env" invisible="1"/>
                    <label for="cont_env_amount"
                       string="Contribution environnementale"
                       attrs="{'invisible': [('advance_payment_method', '!=', 'contribution_energie')]}"/>
                    <field name="cont_env_amount"
                           attrs="{'invisible': ['|', ('advance_payment_method', '!=', 'contribution_energie'), ('cont_env', '!=', True)]}"
                           class="oe_inline"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>