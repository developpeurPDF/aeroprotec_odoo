<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_form_inherit_openbee" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.openbee</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name="action_confirm" position="after">
                <button name="send_to_openbee"
                        string="Envoyer commande avec CGV vers OpenBee"
                        type="object"
                        class="oe_highlight"/>
<!--                        attrs="{'invisible': ['|', ('state', '!=', 'sale'), ('openbee_document_id', '!=', False)]}"/>-->
            </button>
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="openbee_document_id" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
