<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_production_form_inherit_openbee" model="ir.ui.view">
        <field name="name">mrp.production.form.inherit.openbee</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <button name="button_plan" position="after">
                <button name="send_to_openbee"
                        string="Envoyer OF complet vers OpenBee"
                        type="object"
                        class="oe_highlight"/>
            </button>
            <xpath expr="//field[@name='date_planned_start']" position="after">
                <field name="openbee_document_id" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
