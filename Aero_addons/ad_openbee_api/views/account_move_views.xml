<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_openbee" model="ir.ui.view">
        <field name="name">account.move.form.inherit.openbee</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <button name="action_post" position="after">
                <button name="send_to_openbee"
                        string="Envoyer Facture vers OpenBee"
                        type="object"
                        class="oe_highlight"/>
<!--                        attrs="{'invisible': ['|', ('state', '!=', 'posted'), ('openbee_document_id', '!=', False)]}"/>-->
            </button>
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="openbee_document_id" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>