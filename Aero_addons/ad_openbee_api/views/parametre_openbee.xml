<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_parametre_openbee_form" model="ir.ui.view">
        <field name="name">parametre.openbee.form</field>
        <field name="model">parametre.openbee</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="api_url"/>
                        <field name="username"/>
                        <field name="password" password="True"/>
                        <field name="folder_id"/>
                        <field name="type_id"/>
                        <field name="document_model"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_parametre_openbee_tree" model="ir.ui.view">
        <field name="name">parametre.openbee.tree</field>
        <field name="model">parametre.openbee</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="api_url"/>
                <field name="username"/>
                <field name="folder_id"/>
                <field name="type_id"/>
                <field name="document_model"/>
            </tree>
        </field>
    </record>

    <record id="action_parametre_openbee" model="ir.actions.act_window">
        <field name="name">Paramètres OpenBee</field>
        <field name="res_model">parametre.openbee</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_parametre_openbee"
              name="Paramètres OpenBee"
              action="action_parametre_openbee"
              parent="ad_openbee_api.menu_openbee_root"
              sequence="2"/>
</odoo>