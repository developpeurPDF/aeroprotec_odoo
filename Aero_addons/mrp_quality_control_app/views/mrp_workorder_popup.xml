<?xml version="1.0" encoding="utf-8"?>

<odoo>
<record id="view_mrp_workorder_popup_form" model="ir.ui.view">
    <field name="name">mrp.workorder.popup.form</field>
    <field name="model">mrp.workorder.popup</field>
    <field name="arch" type="xml">
        <form string="Ajouter quantité effectuée">
            <group>
                <field name="workorder_id"/>
                <field name="qty_done"/>
            </group>
            <group string="Quality Checks">
                    <field name="quality_check_ids" context="{'default_workorder_id': workorder_id}">
                        <tree>
<!--                        <tree editable="bottom">-->
                            <field name="name" string="Réference"/>
							<field name="product_id"/>
							<field name="lot_id"/>
							<field name="mrp_id"/>
							<field name="date"/>
							<field name="state"/>
                        </tree>
                    </field>
                </group>
            <footer>
<!--                <button string="Cancel" class="btn-secondary" special="cancel"/>-->
                <button string="Enregistrer" type="object" name="action_add_time" class="btn-primary"/>
            </footer>
        </form>
    </field>
</record>
    </odoo>