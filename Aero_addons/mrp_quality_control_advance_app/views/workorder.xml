<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>



		<record id="mrp_workorder_inherit" model="ir.ui.view">
			<field name="name">mrp.workorder.product</field>
			<field name="model">mrp.workorder</field>
			<field name="inherit_id" ref="mrp.mrp_production_workorder_form_view_inherit"/>
			<field name="arch" type="xml">


			 <xpath expr="//div[@name='button_box']" position="inside">


					<field name="quality_point" invisible="1"/>
					<button type="object"
						name="action_open_checkes"
						class="oe_stat_button"
						icon="fa-check"
						string="Contrôles de qualité"
						attrs="{'invisible' : [('state','!=','progress')]}"
						>
						</button>
				


					<button type="object"
						name="open_quality_alert"
						class="oe_stat_button"
						icon="fa-exclamation-triangle"
						string="Non conformité"
						invisible="1"
						>
						
					</button>

				</xpath>

			<xpath expr="//header" position="inside">
				<field name="quality_checks" invisible="1"/>
				<button type="object"
						name="action_check_wizard_picking"
						
						string="Contrôles de qualité"
						class="btn-primary" 
						attrs="{'invisible' : [('quality_checks','!=',True),('state','!=','progress')]}"> 

					</button>


					<button type="object"
						name="create_quality_alert"
						
						string="Non conformité"
						class="btn-primary" 
						invisible="1"
						>
						
					</button>
<!--				<button type="object"-->
<!--                            name="action_open_quality_checks"-->
<!--                            class="oe_stat_button"-->
<!--                            icon="fa-check"-->
<!--                            string="Quality Checks"-->
<!--                            attrs="{'invisible': [('state', '!=', 'progress')]}"/>-->
			</xpath>

			<xpath expr="//notebook" position="inside">
				<page string="Ctrle QTE">
					<field name="check_ids" readonly="0">
						<tree>
							<field name="name" string="Check Reference"/>
							<field name="product_id"/>
							<field name="lot_id"/>
							<field name="mrp_id"/>
							<field name="date"/>
							<field name="state"/>

						</tree>
					</field>
				</page>

			</xpath>
			</field>
		</record>
  </data>
</odoo>