<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_sale_order_view" model="ir.ui.view">
        <field name="name">sale.order_view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="payment_term_id" position="after">
                <field name="is_delivery_date" invisible="0"/>
            </field>

            <xpath expr="//field[@name='order_line']/form/group/group/field[@name='product_id']" position="after">
                <field name="delivery_dates" attrs="{'column_invisible':[('parent.is_delivery_date','!=',True)]}" string="Date début traitement"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
               <!--  <field name="is_delivery_date"/> -->
                <field name="delivery_dates" attrs="{'column_invisible':[('parent.is_delivery_date','!=',True)]}" string="Date début traitement"/>
            </xpath>
        </field>
    </record>
</odoo>