<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_stock_view" model="ir.ui.view">
        <field name="name">stock.move_view</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="date_deadline" position="after">
                <field name="is_delivery_date" invisible="1"/>
            </field>
            <xpath expr="//field[@name='move_ids_without_package']/tree//field[@name='product_id']" position="after">
                <field name="delivery_date" attrs="{'column_invisible':[('parent.is_delivery_date','!=',True)]}"/>
            </xpath>
        </field>
    </record>

    <record id="inherit_mrp_production_view" model="ir.ui.view">
        <field name="name">mrp.production_view</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <field name="bom_id" position="after">
                <field name="sale_line_id" invisible="1"/>
            </field>
        </field>
    </record>
</odoo>