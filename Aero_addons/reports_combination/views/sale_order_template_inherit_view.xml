<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_order_template_form_inherit" model="ir.ui.view">
    <field name="name">sale_order_template.form.cgv.inherit</field>
    <field name="model">sale.order.template</field>
    <field name="type">form</field>
    <field name="inherit_id" ref="sale_management.sale_order_template_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//notebook" position="inside">
            <page string="File CGV">
                <group>
                    <group>
                       <field name="file_terms"
                    groups="sale_management.group_sale_order_template"
                />
                        <field name="number_pages" string="Nombre des pages"/>
                    </group>
                </group>


            </page>

        </xpath>
    </field>
    </record>

</odoo>
