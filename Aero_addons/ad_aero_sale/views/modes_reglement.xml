<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>


      <!--Sous operations-->
  <record model="ir.ui.view" id="param_modes_reglement_tree">
      <field name="name">modes.reglement</field>
      <field name="model">modes.reglement</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="company_id"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="param_modes_reglement_form">
      <field name="name">modes.reglement</field>
      <field name="model">modes.reglement</field>
      <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="company_id"/>
                </group>
            </sheet>
        </form>
      </field>
    </record>


    <record id="modes_reglement_view_search" model="ir.ui.view">
        <field name="name">modes.reglement.search</field>
        <field name="model">modes.reglement</field>
        <field name="arch" type="xml">
            <search string="Frais">
                <field name="company_id" string="Company"/>
                <separator/>
                <searchpanel>
                    <field name="company_id" groups="base.group_multi_company"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="param_action_window_modes_reglement">
      <field name="name">modes.reglement</field>
      <field name="res_model">modes.reglement</field>
      <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="modes_reglement_view_search"/>
        <field name="domain">[('company_id', 'in', allowed_company_ids)]</field>
        <field name="context">{'default_company_id': allowed_company_ids[0],
                'allowed_company_ids': allowed_company_ids}</field>
<!--        <field name="context">{'search_default_company_id': allowed_company_ids[0]}</field>-->
        <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new record</p>
        </field>
    </record>

    <menuitem id="param_menu_modes_reglement" name="Mode de rÃ©glement" action="param_action_window_modes_reglement" parent="account.account_invoicing_menu" sequence="2"/>

</data>
</odoo>