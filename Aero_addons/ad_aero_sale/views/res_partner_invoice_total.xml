<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="view_partner_invoice_total_tree" model="ir.ui.view">
        <field name="name">partner.invoice.total.tree</field>
        <field name="model">res.partner.invoice.total</field>
        <field name="arch" type="xml">
            <tree>
                <field name="month_year"/>
                <field name="total_amount"/>
            </tree>
        </field>
    </record>

    <record id="view_partner_invoice_total_form" model="ir.ui.view">
        <field name="name">partner.invoice.total.form</field>
        <field name="model">res.partner.invoice.total</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="partner_id"/>
                    <field name="month_year"/>
                    <field name="total_amount"/>
                </group>
            </form>
        </field>
    </record>
    <data noupdate="0">
        <record id="ir_cron_update_monthly_invoice_totalss" model="ir.cron">
            <field name="name">Update Monthly Invoice Totals</field>
            <field name="model_id" ref="model_res_partner_invoice_total"/>
            <field name="state">code</field>
            <field name="code">model.create_monthly_totals()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">1</field>
        </record>
        <record id="ir_cron_update_monthly_minimum_invoice" model="ir.cron">
            <field name="name">Create Minimum Invoices</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="state">code</field>
            <field name="code">model._check_and_create_minimum_billing()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
<!--            <field name="nextcall" eval="(context.get('nextcall') or fields.Datetime.now())"/>-->
        </record>
    </data>
</odoo>