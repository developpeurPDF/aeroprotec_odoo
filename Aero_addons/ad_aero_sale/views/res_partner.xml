<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_open_invoice_totals"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-bar-chart">
                    <field name="invoice_total_count" widget="statinfo" string="Total Facture"/>
                </button>
            </div>
            <xpath expr="//form/sheet/field[@name='type']" position="after">
                <group>
                 <field name="address_facturation_par_defaut" attrs="{'invisible': [('type', '!=', 'invoice')]}"/>
                 <field name="address_livraison_par_defaut" attrs="{'invisible': [('type', '!=', 'delivery')]}"/>
                    </group>
            </xpath>


            <xpath expr="//field[@name='property_payment_term_id']" position="after">
                <field name="modes_reglement" options="{'no_create': True}"/>
            </xpath>

            <xpath expr="//field[@name='vat']" position="after">
                <field name="prospect"/>
                <field name="code_abreviation"/>
                <field name="edi"/>
                <field name="client_factor"/>
<!--                <field name="partner_invoice_id"/>-->
<!--                <field name="groupe_societe"/>-->
<!--                <field name="frais" widget="many2many_tags"/>-->
<!--                <field name="appliquer_seuil_a_la_ligne"/>-->
<!--                <field name="seuil_a_la_ligne"/>-->
            </xpath>
            <xpath expr="//form/sheet" position="before">

                <header>
                    <field name="state" widget="statusbar" statusbar_visible="normal,warning,block"/>
                </header>
            </xpath>
            <xpath expr="//page[last()]" position="after">
                <page string="Frais" name="frais">

                    <group string="Frais Client">
                        <field name="frais" widget="many2many_tags"/>
                        <field name="frais_fai"/>
                        <field name="frais_lancement"/>
                        <field name="seuil_a_la_ligne"/>

                    </group>
                    <group>
                        <group>
                            <field name="appliquer_mini_facturation"/>
                        </group>
                        <group>
                            <field name="mini_facturation" attrs="{'invisible': [('appliquer_mini_facturation', '=', False)]}"/>
                        </group>

                    </group>
                    <group string="Contribution">
                        <group>
                        <field name="contribution_enrg" invisible="0"/>
                        </group>
                        <group>
                        <field name="contribution_env" invisible="0"/>
                        </group>
                    </group>

                    <group name="group_product_fees" string="Produits et Montants du frais">
                        <field name="product_fees_ids" no_label="1">
                            <tree create="0" delete="0">
                                <field name="product_id"/>
                                <field name="frais" options="{'no_create': True}"/>
                                <field name="type_frais"/>
                            </tree>
                        </field>
                    </group>
                    <group string="Produits et Montants de Seuil">
                        <field name="product_ids">
                            <tree string="Produits et Montant de Seuil" create="0" delete="0">
                                <field name="name"/>
                                <field name="montant_seuil_a_la_commande"/>
                            </tree>
                        </field>
                    </group>
                </page>
                 <page string="Total Facturation" invisible="1">
                    <field name="invoice_totals">
                        <tree>
                            <field name="month_year"/>
                            <field name="total_amount"/>
                        </tree>
                    </field>
                </page>
            </xpath>


        </field>
    </record>
</odoo>