<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_mrp_workorder_application_peinture_form" model="ir.ui.view">
        <field name="name">mrp.workorder.application.peinture.form</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_form_view_inherit"/>
        <field name="arch" type="xml">
        <field name="state" position="attributes">
            <attribute name="widget">statusbar</attribute>
            <attribute name="statusbar_visible">pending,waiting,nci_waiting,ready,progress,done,cancel</attribute>
        </field>
        <field name="state" widget="statusbar" statusbar_visible="nci_waiting,pending,waiting,ready,progress,done,cancel"/>
            <xpath expr="//header" position="inside">
                <button name="create_maintenance_request"
                        type="object"
                        string="Controle/Maintenance/Equipement"
                        class="oe_highlight"
                        />
            </xpath>
             <xpath expr="//field[@name='is_task_created']" position="after">
                  <field name="aog" string="Type de ligne"/>
                  <field name="priorite_globale"/>
              </xpath>
               <xpath expr="//page[@name='time_tracking']" position="after">
                  <page string="Infos sup">
                    <group>
                    <group string="Informations OF">
                    <field name="production_id"/>
                    <field name="type_of"/>
                    <field name="phase_precedente" readonly="1" />
                    <field name="jours_sans_activite" readonly="1" />
                    <field name="heures_sans_activite" readonly="1" />
                    <field name="date_demarrage_theorique" />
                    <field name="date_dernier_pointage" />    
                    <field name="date_livraison_theorique" />
                    <field name="temps_theorique" />
                    <field name="total_fabricated_qty"/>
                    <field name="qty_remaining"/>
                    </group>
                    <group string="Article">
                        <field name="fai" />
                        <field name="reference_piece" />
                        <field name="designation_piece" />
                        <field name="photo_piece" widget="image" />
                        <field name="code_barre_phase" />
                        <field name="longueur_piece" />
                        <field name="abreviation_matiere" />
                        <field name="ref_matiere" />
                        <field name="resistance_matiere" />
                    </group>
                    <group string="Gamme">
                    <field name="gamme_of"/>
                    </group>
                    
                    </group>
                    </page>
                    <page string="Cde Clt">
                    <group>
                    <field name="client" />
                    <field name="ref_commande_interne" />
                    <field name="ref_commande_client" />
                    <field name="aog"/>
                    <field name="n_poste"/>
                    </group>
                    </page>
                     <page string="Opération">
                    <group>
                    <group>

                    <field name="code_operation"/>
                    <field name="operation_id"/>
                    <field name="matricule_operateur"/>
                    <field name="sous_op" widget="many2many_tags"/>
                    </group>
                     <group>

                    <field name="norme_interne"/>
                    <field name="indice_ni"/>
                    <field name="norme_externe"/>
                    <field name="indice_ne"/>
                    </group>
                    </group>
                    </page>
                   <page string="App°Peinture">

                        <field name="applications_ids">
                            <tree>
                                <field name="n_sequence"/>
                                <field name="melange"/>
                             <field name="quantite"/>
                            <field name="termine"/>
                            <field name="Temperature_application"/>
                            <field name="hygrometrie_application"/>
                            <field name="date_debut"/>
                            <field name="date_fin"/>
                            <field name="remarque_application"/>
                            </tree>
                        </field>
                    </page>
                     <page string="Etuvage">

                        <field name="etuvage_ids">
                        <tree>
                            <field name="n_etuvage"/>
                            <field name="Temperature_etuvage"/>
                            <field name="date_debut_etuvege"/>
                            <field name="date_fin_etuvage"/>
                            <field name="remarque_etuvage"/>
                        </tree>
                        </field>
                    </page>
               </xpath>
              
                

        </field>
    </record>
