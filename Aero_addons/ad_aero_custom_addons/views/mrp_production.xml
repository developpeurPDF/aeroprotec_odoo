<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
      <record id="mrp_productionn_view_form" model="ir.ui.view">
            <field name="name">mrp.production.form.inherit</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="donneur_order"/>
                    <field name="nom_donneur_order" invisible="1"/>
                    <field name="codes"/>
                    <field name="sale_order_ids" invisible="1"/>
                </xpath>
<!--                <xpath expr="//field[@name='origin']" position="after">-->
<!--                    <field name="sale_order_ids"/>-->
<!--                </xpath>-->
                <xpath expr="//field[@name='bom_id']" position="attributes">
                <attribute name="domain">[('state', '=', 'active')]</attribute>
            </xpath>
            </field>
      </record>

  </data>
</odoo>