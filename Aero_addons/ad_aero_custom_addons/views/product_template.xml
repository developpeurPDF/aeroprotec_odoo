<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="product_template_aero_view_form" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='produce_delay']" position="attributes">
                    <attribute name="string">Durée du cycle</attribute>
                </xpath>
                <xpath expr="//field[@name='sale_delay']" position="attributes">
                     <attribute name="string">Durée du cycle négocié avec le client</attribute>
                </xpath>

                <xpath expr="//button[@name='action_update_quantity_on_hand']" position="after">

                    <button name="toggle_lock" attrs="{'invisible': [('is_locked', '=', False)]}" string="Déverrouiller" groups="stock.group_stock_manager" type="object" data-hotkey="l"/>
                    <button name="toggle_lock" attrs="{'invisible': [('is_locked', '=', True)]}" string="Verrouiller" groups="stock.group_stock_manager" type="object" data-hotkey="l"/>
                </xpath>

                <xpath expr="//field[@name='name']" position="after">
                    <field name="is_locked" string="Locked" help="Check this box to lock product modifications." invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='detailed_type']" position="before">

                    <field name="allow_multiple_boms" groups="base.group_no_one"/>
                    <field name="client" attrs="{'readonly':[('is_locked', '=', True)]}"/>
                    <field name="code" invisible="1"/>
                    <field name="norme_douaniere" attrs="{'readonly':[('is_locked', '=', True)]}"/>



<!--                    <label for="n_ft"/>-->
<!--                        <div class="o_row" name="n_ft">-->
<!--                            <field name="n_ft" class="oe_inline" attrs="{'readonly':[('is_locked', '=', True)]}"/>-->
<!--                            <field name="piece_jointe_ft"/>-->
<!--&lt;!&ndash;                                    attrs="{'required':[('n_ft', '!=', '')]}"/>&ndash;&gt;-->
<!--                        </div>-->

                    <field name="type_article" attrs="{'readonly':[('is_locked', '=', True)]}"/>


                </xpath>
                <xpath expr="//field[@name='detailed_type']" position="after">
                    <field name="gerer_stock"/>
                    <field name="gestion_lots"/>
                    <field name="gestion_sortie_auto"/>
                </xpath>

                <notebook>
                    <page string="Méthode">
                        <group>
                        <group string="Description">
                        <field name="forme" attrs="{'readonly':[('is_locked', '=', True)]}"/>
                        <field name="hauteur" attrs="{'readonly':[('is_locked', '=', True)]}"/>
                        <field name="largeur" attrs="{'readonly':[('is_locked', '=', True)]}"/>
                        <field name="longueur" attrs="{'readonly':[('is_locked', '=', True)]}"/>
                        <field name="diametre" attrs="{'readonly':[('is_locked', '=', True)]}"/>
                        <field name="surface" attrs="{'readonly':[('is_locked', '=', True)]}"/>
                        <field name="surface_traiter" attrs="{'readonly':[('is_locked', '=', True)]}"/>
                        <field name="type_montage" attrs="{'readonly':[('is_locked', '=', True)]}"/>
                        <field name="nb_piece_barre" attrs="{'readonly':[('is_locked', '=', True)]}"/>
                        <field name="famille_matiere" attrs="{'readonly':[('is_locked', '=', True)]}"/>
                        <field name="famille_matiere_name" invisible="1"/>
                        <field name="matiere" attrs="{'readonly':[('is_locked', '=', True)]}"/>
                        <field name="matiere_abreviation" attrs="{'readonly':[('is_locked', '=', True)]}"/>
                        <field name="matiere_name" invisible="1"/>
                        <field name="ref_matiere" attrs="{'readonly':[('is_locked', '=', True)]}"/>
                        <field name="ref_matiere_name" invisible="1"/>
                        <field name="resistance_matiere" attrs="{'readonly':[('is_locked', '=', True)]}"/>
                        </group>

                            <div>
                                <group string="Classification" name="classification">
                                    <field name="donneur_order" domain="['|',('company_id','=',''),('company_id','=',company_id)]" attrs="{'readonly':[('is_locked', '=', True)]}"/>
<!--                                    <field name="norme" domain="[('donneur_order','=',donneur_order)]" attrs="{'readonly':[('is_locked', '=', True)]}"/>-->
                                    <field name="classe_fonctionnelle" attrs="{'readonly':[('is_locked', '=', True)]}" domain="['|',('company_id', '=', company_id),('company_id', '=', False)]"/>
                                    <field name="programme_aeonautique" attrs="{'readonly':[('is_locked', '=', True)]}" domain="['|',('company_id', '=', company_id),('company_id', '=', False)]"/>
                                    <field name="coeff_avion" attrs="{'readonly':[('is_locked', '=', True)]}"/>
                                    <field name="plan_reference" attrs="{'readonly':[('is_locked', '=', True)]}"/>

                                    <field name="indice" attrs="{'readonly':[('is_locked', '=', True)]}"/>
                                    <field name="type_indice" attrs="{'readonly':[('is_locked', '=', True)]}"/>
                                    <field name="memo" attrs="{'readonly':[('is_locked', '=', True)]}"/>
                                    <label for="n_ft"/>
                                    <div class="o_row" name="n_ft">
                                        <field name="n_ft" class="oe_inline" attrs="{'readonly':[('is_locked', '=', True)]}"/>
                                        <field name="piece_jointe_ft"/>
            <!--                                    attrs="{'required':[('n_ft', '!=', '')]}"/>-->
                                    </div>

                                </group>
                                    <group string="Info">
                                    <field name="activite" attrs="{'readonly':[('is_locked', '=', True)]}" domain="['|',('company_id', '=', company_id),('company_id', '=', False)]"/>
                                    <field name="motif_blocage_lancement" attrs="{'readonly':[('is_locked', '=', True)]}" domain="['|',('company_id', '=', company_id),('company_id', '=', False)]"/>
                                    <field name="masque_impression" attrs="{'readonly':[('is_locked', '=', True)]}"/>
                                    <field name="info_marquer" attrs="{'readonly':[('is_locked', '=', True)]}"/>
                                    </group>
                            </div>
                        </group>

                    </page>
                </notebook>

            </field>
    </record>


    </data>
</odoo>