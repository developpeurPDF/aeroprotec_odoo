    <record model="ir.ui.view" id="param_list_parameterr_form">
      <field name="name">Famille matière</field>
      <field name="model">matiere.parameter</field>
      <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                  <field name="name"/>
                  <field name="active" invisible="1"/>
                </group>

                  <notebook>
                        <page string="Sous famille matière" name="matiere">
                          <field name="values_ids" widget="one2many">
                            <tree string="Matière" delete="true">
                              <field name="name"/>
                              <field name="name_abreviation"/>
                              <field name="active" invisible="1"/>
                            </tree>
                          </field>
                        </page>
                  </notebook>
            </sheet>
        </form>
      </field>
    </record>


