<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_search_quality_team" model="ir.ui.view">
            <field name="name">quality.team.search</field>
            <field name="model">quality.team</field>
            <field name="arch" type="xml">
                <search string="Équipes Qualité">
                    <field name="company_id" string="Société"/>
                    <separator/>
                    <searchpanel>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </searchpanel>
                </search>
            </field>
        </record>

<record id="view_quality_team_tree" model="ir.ui.view">
	   <field name="name">quality.team.tree</field>
	   <field name="model">quality.team</field>
	   <field name="priority">2</field>
	   <field name="arch" type="xml">
	    <tree string="Équipes Qualité">
	     <field name="name"/>
	    
	     <field name="alias_id"/>
			<field name="company_id" string="Société" domain="[('id', '=', company_id)]"/>
    
	    </tree>
	   </field>
        </record>

        <record id="view_quality_team_form" model="ir.ui.view">
	   <field name="name">quality.team.form</field>
	   <field name="model">quality.team</field>
	   <field name="priority">1</field>
	   <field name="arch" type="xml">
	    <form string="Équipes Qualité">
	    	
	    	<sheet>
	    		<h2><field name="name"/></h2>
	     			
	    		<group>
	    			<group >
	    			<field name="alias_id"/>
						<field name="company_id" string="Société"/>
						<field name="employee_ids" widget="many2many_tags"/>
					</group>
					</group>
	    	
	     </sheet>
	 </form>
	</field>
</record>

<record id="quality_team_action_id" model="ir.actions.act_window">
	  <field name="name">Équipes Qualité</field>
	  <field name="type">ir.actions.act_window</field>
	  <field name="res_model">quality.team</field>
	  <field name="view_mode">tree,form</field>
	<field name="search_view_id" ref="view_search_quality_team"/>
        <field name="domain">[('company_id', 'in', allowed_company_ids)]</field>
        <field name="context">{'default_company_id': allowed_company_ids[0],
                'allowed_company_ids': allowed_company_ids}</field>
	 
	  <field name="help" type="html">
	   <p class="oe_view_nocontent_create"> </p>
	   <p></p>
	  </field>
	</record>

<menuitem id ="menu_qulity_team" 
		 parent="stock.menu_stock_root" name="Traitement de non-conformité"
		sequence="32" />

<menuitem id ="sub_qulity_team" 
		action="quality_team_action_id" parent="menu_qulity_team" name="Équipes Qualité"
		sequence="30" />

</odoo>