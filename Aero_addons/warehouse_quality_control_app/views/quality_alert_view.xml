<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_search_quality_alert" model="ir.ui.view">
        <field name="name">quality.alert.search</field>
        <field name="model">quality.alert</field>
        <field name="arch" type="xml">
            <search string="Non conformité">
                <field name="company_id" string="Société"/>
                <separator/>
                <searchpanel>
                    <field name="company_id" groups="base.group_multi_company"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="view_quality_alert_tree" model="ir.ui.view">
        <field name="name">quality.alert.tree</field>
        <field name="model">quality.alert</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <tree string="Equipe Qualité">

                <field name="name"/>

                <field name="title"/>
                <field name="product_id"/>

                <field name="user_id"/>
                <field name="partner_id"/>
                <field name="team_id"/>
                <field name="date_assigned"/>
                <field name="date_close"/>
                <field name="company_id" string="Société" domain="[('id', '=', company_id)]"/>

            </tree>
        </field>
    </record>

    <record id="qc_idea" model="ir.sequence">
        <field name="name">quality_alert</field>
        <field name="code">quality.alert</field>
        <field name="prefix">QA</field>
        <field name="padding">4</field>
    </record>

    <record id="view_quality_alert_form" model="ir.ui.view">
        <field name="name">quality.alert.form</field>
        <field name="model">quality.alert</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Equipe Qualité">
                <header>
                    <!--<button name="action_generate_of_reprise" string="Générer OF" type="object" class="btn-primary"/>-->
                    <button name="action_create_sale_order" string="Générer CR client" type="object" class="btn-primary"
                            attrs="{'invisible': [('tiers', '!=', 'client')]}"/>
                    <button name="action_create_purchase_order" string="Générer CR fournisseur" type="object"
                            class="btn-primary"
                            attrs="{'invisible': [('tiers', 'not in', ('fournisseur', 'sous_traitant'))]}"/>

                    <field name="state_id" widget="statusbar"
                           options="{'clickable': '1'}"

                    />

                </header>


                <sheet>
                    <style>
                        .custom-badge .o_badge:hover,
                        .custom-badge .o_badge.active {
                        background-color: #004085 !important;
                        color: #fff !important;
                        border: 1px solid #00356b;
                        font-weight: bold;
                        }
                    </style>
                    <group>
                        <field name="decision" widget="selection_badge" class="custom-badge"
                               style="padding-start: 20px;"/>
                    </group>
                    <h2>
                        <field name="name"/>
                    </h2>

                    <group>
                        <group>
                            <field name="title"/>
                            <field name="tiers"/>
                            <field name="client"/>
                            <field name="product_id"/>

                        </group>


                        <group>
                            <field name="user_id"/>
                            <field name="team_id"/>
                            <field name="priority" widget="priority"/>
                            <field name="tag_ids" widget="many2many_tags"/>

                        </group>
                    </group>
                    <group>

                        <group string="Commande Initiale Client" attrs="{'invisible': [('tiers', '!=', 'client')]}">
                            <field name="commande_initiale_client" attrs="{'invisible': [('tiers', '!=', 'client')]}"/>
                            <field name="ref_commande_client"/>
                            <field name="ligne_commande_client"/>
                            <field name="bl_client"/>

                        </group>
                        <group string="Commande Initiale Fournisseur"
                               attrs="{'invisible': [('tiers', 'not in', ('fournisseur', 'sous_traitant'))]}">
                            <field name="commande_initiale_fournisseur"
                                   attrs="{'invisible': [('tiers', 'not in', ('fournisseur', 'sous_traitant'))]}"/>
                            <field name="ref_commande_fournisseur"/>
                            <field name="ligne_commande_fournisseur"/>
                            <field name="bl_fournisseur"/>
                        </group>
                        <group string="Commande Reprise Client" attrs="{'invisible': [('tiers', '!=', 'client')]}">
                            <field name="commande_reprise_client" attrs="{'invisible': [('tiers', '!=', 'client')]}"/>
                            <field name="ref_commande_client_reprise"/>
                            <field name="ligne_commande_client_reprise"/>
                            <field name="bl_client_reprise"/>
                        </group>
                        <group string="Commande Reprise Fournisseur"
                               attrs="{'invisible': [('tiers', 'not in', ('fournisseur', 'sous_traitant'))]}">
                            <field name="commande_reprise_fournisseur"
                                   attrs="{'invisible': [('tiers', 'not in', ('fournisseur', 'sous_traitant'))]}"/>
                            <field name="ref_commande_fournisseur_reprise"/>
                            <field name="ligne_commande_fournisseur_reprise"/>
                            <field name="bl_fournisseur_reprise"/>
                        </group>
                        <!--<field name="product_temp_id"/>
                        <field name="product_id" domain="[('product_tmpl_id','=',product_temp_id)]"/>
                        <field name="lot_id" domain="[('product_id', '=', product_id)]"/>-->

                    </group>
                    <group>

                        <group string="Données initiales">
                            <field name="of_initiale"/>
                            <field name="source_nc"/>
                            <field name="criticite"/>
                            <field name="date_creation_nc"/>
                            <field name="date_cloture"/>
                            <field name="utilisateur_creation_nc"/>
                            <field name="ilot_machine_responsable"/>
                            <field name="company_id"/>

                        </group>
                        <group string="Données de reprise">
                            <field name="of_reprise"/>
                            <field name="gamme_reprise"/>
                            <!--<field name="of"/>-->
                            <!--<field name="commande_initiale"/>-->





                        </group>
                    </group>

                    <notebook>
                        <page string="infos suplémentaires">
                            <group>
                                <group>

                                    <field name="designation_article"/>
                                    <field name="quantite_initiale_of"/>
                                    <field name="quantite_nc"/>
                                    <field name="reference_article"/>
                                    <field name="site"/>
                                    <field name="nc_sur_fai"/>
                                </group>


                            </group>
                        </page>
                        <page name="plan_action" string="Plan d'action">
                            <group>
                                <group>
                                    <field name="type_action"/>
                                    <field name="descriptif_action"/>
                                    <field name="date_creation_action"/>
                                    <field name="date_realisation_action"/>
                                </group>
                                <group>

                                    <field name="efficacite"/>
                                    <field name="action_cloturee"/>
                                    <field name="validateur_action"/>
                                    <field name="responsable_action_id"/>
                                </group>
                            </group>
                        </page>
                        <page string="Analyse">
                            <group>
                                <group>
                                    <field name="defaut_id" widget="many2many_tags"/>

                                    <field name="nonconformite_id" widget="many2many_tags"/>
                                    <field name="cause_non_detection" widget="many2many_tags"/>
                                    <field name="cause_occurence" widget="many2many_tags"/>


                                </group>
                                <group>
                                    <field name="description_defaut"/>
                                    <field name="cause_non_destruction"/>
                                    <field name="cause_detail"/>
                                </group>
                            </group>
                        </page>
                        <page name="Description" string="Description">
                            <field name="description"/>
                        </page>

                        <!--<page name="Correct Actions" string="Actions correctes">
                            <field name="correct_actions"/>
                        </page>

                        <page name="Preventive Actions" string="Actions préventives">
                            <field name="preventive_actions"/>
                        </page>-->

                        <page name="Miscellaneous" string="Divers">
                            <group>
                                <field name="partner_id"/>
                            </group>
                            <group>
                                <field name="date_assigned"/>
                                <field name="date_close"/>
                            </group>
                        </page>


                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="quality_alert_action_id" model="ir.actions.act_window">
        <field name="name">Non conformité</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">quality.alert</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_search_quality_alert"/>
        <field name="domain">[('company_id', 'in', allowed_company_ids)]</field>
        <field name="context">{'default_company_id': allowed_company_ids[0],
                'allowed_company_ids': allowed_company_ids}</field>

        <field name="help" type="html">
            <p class="oe_view_nocontent_create"></p>
            <p></p>
        </field>
    </record>


    <menuitem id="sub_qulity_alert"
              action="quality_alert_action_id" parent="menu_qulity_team" name="Non-conformité"
              sequence="31"/>

    <record id="view_search_quality_alert_stage" model="ir.ui.view">
        <field name="name">quality.alert.stage.search</field>
        <field name="model">quality.alert.stage</field>
        <field name="arch" type="xml">
            <search string="Stage de non conformité">
                <field name="company_id" string="Société"/>
                <separator/>
                <searchpanel>
                    <field name="company_id" groups="base.group_multi_company"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="view_quality_alert_stagetree" model="ir.ui.view">
        <field name="name">quality.alert.tree</field>
        <field name="model">quality.alert.stage</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <tree string="Equipe Qualité">

                <field name="name"/>
                <field name="sequence"/>
                <field name="company_id" string="Société" domain="[('id', '=', company_id)]"/>


            </tree>
        </field>
    </record>

    <record id="view_quality_alert_stageform" model="ir.ui.view">
        <field name="name">quality.alert.form</field>
        <field name="model">quality.alert.stage</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Stage de non conformité">

                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                        <field name="company_id" string="Société"/>
                    </group>


                </sheet>
            </form>
        </field>
    </record>

    <record id="quality_alert_stage_action_id" model="ir.actions.act_window">
        <field name="name">Stage de non conformité</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">quality.alert.stage</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_search_quality_alert_stage"/>
        <field name="domain">[('company_id', 'in', allowed_company_ids)]</field>
        <field name="context">{'default_company_id': allowed_company_ids[0],
                'allowed_company_ids': allowed_company_ids}</field>

        <field name="help" type="html">
            <p class="oe_view_nocontent_create"></p>
            <p></p>
        </field>

    </record>

    <menuitem id="sub_qulity_alert_syage"
              action="quality_alert_stage_action_id" parent="menu_qulity_team" name="Stage de Non-conformité"
              sequence="31"/>

</odoo>